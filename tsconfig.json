{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitHelpers": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "baseUrl": "./src",
        "lib": [
            "es6",
            "dom"
        ],
        "paths": {
            "aot/*": [
                "../build/aot/src/*"
            ],
            "components/*": [
                "./app/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "useCache": true,
        "forkChecker": true
    }
}